<config>
    <modules>
        <Excellence_Poll>
            <version>0.1.0</version>
        </Excellence_Poll>
    </modules>
    <frontend>
        <routers>
            <poll>
                <use>standard</use>
                <args>
                    <module>Excellence_Poll</module>
                    <frontName>poll</frontName>
                </args>
            </poll>
        </routers>
        <layout>
            <updates>
                <poll>
                    <file>poll.xml</file>
                </poll>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<poll>
				<use>admin</use>
				<args>
					<module>Excellence_Poll</module>
					<frontName>poll</frontName>
				</args>
			</poll>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<poll module="poll">
				<title>Poll</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="poll">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>poll/adminhtml_poll</action>
					</items>
				</children>
			</poll>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Excellence_Poll>
							<title>Poll Module</title>
							<sort_order>10</sort_order>
						</Excellence_Poll>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<poll>
					<file>poll.xml</file>
				</poll>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <poll>
                <class>Excellence_Poll_Model</class>
                <resourceModel>poll_mysql4</resourceModel>
            </poll>
            <poll_mysql4>
                <class>Excellence_Poll_Model_Mysql4</class>
                <entities>
                    <poll>
                        <table>poll</table>
                    </poll>
                </entities>
            </poll_mysql4>
        </models>
        <resources>
            <poll_setup>
                <setup>
                    <module>Excellence_Poll</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </poll_setup>
            <poll_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </poll_write>
            <poll_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </poll_read>
        </resources>
        <blocks>
            <poll>
                <class>Excellence_Poll_Block</class>
            </poll>
        </blocks>
        <helpers>
            <poll>
                <class>Excellence_Poll_Helper</class>
            </poll>
        </helpers>
    </global>
</config>